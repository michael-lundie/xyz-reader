<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="MeadowThemeBase" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!--Link base style in manifest-->
    <style name="Meadow" parent="MeadowThemeBase" />

    <!--AppBar style-->
    <style name="Meadow.AppBar" parent="MeadowThemeBase">

    </style>

    <!--Toolbar style-->
    <style name="Meadow.Toolbar" parent="MeadowThemeBase" />

    <!--RecyclerView-->
    <style name="Meadow.RecyclerView" parent="MeadowThemeBase">
        <item name="android:padding">@dimen/default_h_padding</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <!-- Article List Card View-->
    <style name="Meadow.ListCardView">
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Meadow.ListCardView.Heading" parent="MeadowThemeBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

</resources>
